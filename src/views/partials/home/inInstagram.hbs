<section class='in-instagram section'>
  <div class='container in-instagram__container'>
    <h2 class='in-instagram__title'>МЫ В INSTAGRAM</h2>

    <div class='in-instagram__wrapper'>
      <div class='in-instagram__slider'>
        {{#each pageInInstagramSliderData}}
          <div class='slider__item'>
            <a
              class='in-instagram__link'
              target='_blank'
              rel='noreferrer noopener'
              href='https://www.instagram.com/'
            >
              <picture>
                <source
                  srcset='
    {{image-mobile-1x}} 1x,
    {{image-mobile-2x}} 2x'
                  media='(max-width: 1377px)'
                />
                <source
                  srcset='
  {{image-desktop-1x}} 1x,
  {{image-desktop-2x}} 2x'
                  media='(min-width: 1378px)'
                />
                <img
                  class='in-instagram__title-image'
                  src='#'
                  alt='{{name-title}}'
                  id='{{id-title-image}}'
                  loading='lazy'
                  width='290px'
                  height='410px'
                  ;
                />
              </picture>
            </a>

          </div>
        {{/each}}
      </div>
    </div>

  </div>
</section>